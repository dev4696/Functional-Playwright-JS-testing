{
  "name": "playwright-jan25",
  "version": "1.0.0",
  "description": "A test automation project using Playwright and Cucumber.js for BDD-style testing.",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js",
    "test:allure": "cucumber-js --format json:reports/cucumber-report.json --format cucumberjs-allure2-reporter",
    "allure:serve": "allure serve allure-results",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "start": "node index.js",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "author": "Dev",
  "license": "MIT",
  "keywords": [
    "playwright",
    "cucumber-js",
    "bdd",
    "automation",
    "testing"
  ],
  "devDependencies": {
    "@cucumber/cucumber": "^11.2.0",
    "@playwright/test": "^1.50.1",
    "allure-cucumberjs": "^3.2.0",
    "cucumber-html-reporter": "^6.0.0",
    "eslint": "^8.50.0",
    "mocha": "^11.1.0",
    "mocha-junit-reporter": "^2.2.1",
    "mocha-multi-reporters": "^1.5.1",
    "mochawesome": "^7.1.3",
    "prettier": "^3.0.0"
  },
  "dependencies": {
    "playwright": "^1.49.1"
  },
  "engines": {
    "node": ">=18.0.0 <21.0.0",
    "npm": ">=9.0.0 <10.0.0"
  }
}
